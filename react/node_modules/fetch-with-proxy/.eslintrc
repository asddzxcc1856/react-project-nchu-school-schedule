{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "mocha": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "error",
            {
                "code": 120,
                "tabWidth": 4,
                "ignoreUrls": true
            }
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "_id"
                ]
            }
        ],
        "import/no-extraneous-dependencies": "off",
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ]
    }
}